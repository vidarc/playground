{
  "name": "playground",
  "version": "1.0.0",
  "repository": "https://github.com/vidarc/playground",
  "author": "Matthew Ailes <mattailes@gmail.com>",
  "license": "MIT",
  "private": true,
  "packageManager": "yarn@4.12.0",
  "type": "module",
  "scripts": {
    "build": "yarn build:typecheck && yarn build:client && yarn build:server",
    "build:typecheck": "tsc --noEmit",
    "build:client": "vite build",
    "build:server": "vite build --ssr client/entry-server.tsx --outDir ../dist/ssr && tsc --project tsconfig.server.json",
    "lint": "eslint .",
    "test": "echo 'no tests yet'",
    "start": "ts-node --project tsconfig.server.json src/server/server.ts",
    "start:prod": "node dist/server/server.js",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@faker-js/faker": "10.1.0",
    "@fastify/helmet": "13.0.2",
    "@fastify/middie": "9.0.3",
    "@fastify/rate-limit": "10.3.0",
    "@fastify/static": "8.3.0",
    "@linaria/atomic": "6.3.0",
    "@linaria/core": "6.3.0",
    "fastify": "5.6.2",
    "history": "5.3.0",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "react-router": "7.10.1",
    "sanitize.css": "13.0.0",
    "swr": "2.3.7"
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@playwright/test": "1.57.0",
    "@tsconfig/esm": "1.0.5",
    "@tsconfig/node20": "20.1.8",
    "@tsconfig/strictest": "2.0.8",
    "@tsconfig/vite-react": "7.0.2",
    "@types/node": "22.19.1",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@typescript-eslint/eslint-plugin": "8.48.1",
    "@typescript-eslint/parser": "8.48.1",
    "@vitejs/plugin-react": "5.1.1",
    "@wyw-in-js/vite": "0.8.0",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import-x": "4.16.1",
    "eslint-plugin-playwright": "2.4.0",
    "eslint-plugin-prettier": "5.5.4",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "prettier": "3.7.4",
    "rollup": "4.53.3",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.48.1",
    "vite": "7.2.6"
  },
  "browserslist": "last 2 Chrome versions",
  "prettier": {
    "singleQuote": true
  }
}
